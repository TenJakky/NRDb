{layout ../@layout.latte}
{block title}Games{/block}
{block head}{/block}
{block content}

<section>
    <ul class="inline-buttons">
        <li>
            <a href="{plink Movie:add}">Add game</a>
        </li>
        <li>
            <a href="{plink Movie:rate}">Add rating</a>
        </li>
        <li>
            <a href="{plink Movie:list}">List of games</a>
        </li>
    </ul>
</section>
<section>
    <h2>Recently added</h2>
    {control movieSmallList 'new'}
</section>
<section>
    <h2>Top rated</h2>
    {control movieSmallList 'top'}
</section>
<section>
    <h2>To rate</h2>
    {control movieSmallList 'notRated'}
</section>

