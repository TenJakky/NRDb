{layout ../@layout.latte}{block title}Dashboard{/block}{block head}{/block}{block content}<section>    <h2>News</h2>    {control newsBanner}</section><section>    <h2>Introduction</h2>    <p>{$introduction}</p></section><section>    <h2>Stats</h2>    <h3>Number of elements and ratings</h3>    <table class="grid">        <thead>            <td>X</td>            <th># of elements</th>            <th># of ratings</th>            <th>10*</th><th>9*</th><th>8*</th><th>7*</th><th>6*</th><th>5*</th><th>4*</th><th>3*</th><th>2*</th><th>1*</th><th>0*</th>        </thead>        <tbody>            <tr>                <th>Movies</th>                <td>{$moviesT}</td>                <td>{$moviesRT}</td>                <td>{$movies10}</td>                <td>{$movies9}</td>                <td>{$movies8}</td>                <td>{$movies7}</td>                <td>{$movies6}</td>                <td>{$movies5}</td>                <td>{$movies4}</td>                <td>{$movies3}</td>                <td>{$movies2}</td>                <td>{$movies1}</td>                <td>{$movies0}</td>            </tr>            <tr>                <th>Series</th>                <td>{$seriesT}</td>                <td>{$seriesRT}</td>                <td>{$series10}</td>                <td>{$series9}</td>                <td>{$series8}</td>                <td>{$series7}</td>                <td>{$series6}</td>                <td>{$series5}</td>                <td>{$series4}</td>                <td>{$series3}</td>                <td>{$series2}</td>                <td>{$series1}</td>                <td>{$series0}</td>            </tr>            <tr>                <th>Books</th>                <td>{$booksT}</td>                <td>{$booksRT}</td>                <td>{$books10}</td>                <td>{$books9}</td>                <td>{$books8}</td>                <td>{$books7}</td>                <td>{$books6}</td>                <td>{$books5}</td>                <td>{$books4}</td>                <td>{$books3}</td>                <td>{$books2}</td>                <td>{$books1}</td>                <td>{$books0}</td>            </tr>            <tr>                <th>Games</th>                <td>{$gamesT}</td>                <td>{$gamesRT}</td>                <td>{$games10}</td>                <td>{$games9}</td>                <td>{$games8}</td>                <td>{$games7}</td>                <td>{$games6}</td>                <td>{$games5}</td>                <td>{$games4}</td>                <td>{$games3}</td>                <td>{$games2}</td>                <td>{$games1}</td>                <td>{$games0}</td>            </tr>            <tr>                <th>Total</th>                <td>{$total}</td>                <td>{$totalR}</td>                <td>{$total10}</td>                <td>{$total9}</td>                <td>{$total8}</td>                <td>{$total7}</td>                <td>{$total6}</td>                <td>{$total5}</td>                <td>{$total4}</td>                <td>{$total3}</td>                <td>{$total2}</td>                <td>{$total1}</td>                <td>{$total0}</td>            </tr>        </tbody>    </table>    <h3>Most active users</h3>    <table class="grid">        <thead>            <td>X</td>            <th>Movies</th>            <th>Series</th>            <th>Books</th>            <th>Games</th>            <th>Total</th>        </thead>        <tbody>        {foreach $activeUsers as $temp}            {if $temp->id == $user->getId()}            <tr class="highlight">            {else}            <tr>            {/if}                <td><a href="{plink User:view $temp->id}">{$temp->username}</a></td>                <td>{$temp->movie}</td>                <td>{$temp->series}</td>                <td>{$temp->book}</td>                <td>{$temp->game}</td>                <td>{$temp->total}</td>            </tr>        {/foreach}        </tbody>    </table></section>